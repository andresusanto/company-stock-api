{
  "private": true,
  "name": "company-stock-api",
  "version": "1.0.0",
  "description": "Company Stock API with GraphQL interface",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' -r tsconfig-paths/register src/index.ts",
    "build": "ttsc",
    "start": "NODE_ENV=production node dist/index.js",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test": "npm run lint && jest"
  },
  "author": "Andre Susanto",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.4",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "eslint": "^7.32.0",
    "jest": "^27.1.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "ttypescript": "^1.5.12",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "sqlite": "^4.0.23",
    "sqlite3": "^4.2.0",
    "winston": "^3.3.3"
  }
}
